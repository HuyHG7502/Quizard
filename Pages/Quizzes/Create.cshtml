@page
@model Quizard.Pages.Quizzes.CreateModel
@{
    ViewData["Title"] = "Create Quiz";
}

<div class="card shadow-sm border-0 rounded-2 p-2">
    <div class="card-body">
        <h2 class="card-title mb-4">Create New Quiz</h2>

        <form method="post">
            <div class="mb-3">
                <label asp-for="QuizVm.Title" class="form-label fw-semibold">Quiz Title</label>
                <input asp-for="QuizVm.Title" class="form-control" />
                <span asp-validation-for="QuizVm.Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="QuizVm.Description" class="form-label fw-semibold">Description</label>
                <textarea asp-for="QuizVm.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="QuizVm.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="QuizVm.TimeLimit" class="form-label fw-semibold">Time Limit (in minutes)</label>
                <input asp-for="QuizVm.TimeLimit" type="number" class="form-control" />
                <span asp-validation-for="QuizVm.TimeLimit" class="text-danger"></span>
            </div>

            <div class="form-check mb-4">
                <input asp-for="QuizVm.IsRandomOrder" class="form-check-input" />
                <label asp-for="QuizVm.IsRandomOrder" class="form-check-label">
                    Randomize Question Order
                </label>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Create Quiz
                </button>
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
